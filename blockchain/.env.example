# TOPAY Blockchain Environment Configuration
# Copy this file to .env and customize the values for your environment

# =============================================================================
# VALIDATOR CONFIGURATION
# =============================================================================

# Validator Codes Configuration (New Code-Based System)
VALIDATOR_CODES=TOPAY-VAL-LOCAL-001,TOPAY-VAL-LOCAL-002,TOPAY-VAL-LOCAL-003
PRIMARY_VALIDATOR_CODE=TOPAY-VAL-LOCAL-001

# Validator URLs (for registry mapping)
VALIDATOR_URLS=http://localhost:8547,http://localhost:8548,http://localhost:8549

# =============================================================================
# REMOTE STORAGE SETTINGS
# =============================================================================

# Enable/disable remote storage (true/false)
ENABLE_REMOTE_STORAGE=true

# Enable data replication across multiple validators (true/false)
STORAGE_REPLICATION=true

# Enable automatic backups (true/false)
BACKUP_ENABLED=true

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Network timeout in milliseconds
NETWORK_TIMEOUT=5000

# Maximum number of retry attempts
MAX_RETRIES=3

# Delay between retry attempts in milliseconds
RETRY_DELAY=1000

# =============================================================================
# NODE CONFIGURATION
# =============================================================================

# Unique identifier for this node
NODE_ID=TOPAY-NODE-001

# Port for blockchain network communication
BLOCKCHAIN_PORT=3001

# Miner address (if this node will mine blocks)
MINER_ADDRESS=TOPAYminer234567890abcdef1234567890abcdef12345678

# =============================================================================
# MINING CONFIGURATION
# =============================================================================

# Enable automatic mining on startup (true/false)
AUTO_MINING=false

# Mining interval in milliseconds
MINING_INTERVAL=10000

# =============================================================================
# DEBUG AND LOGGING
# =============================================================================

# Enable debug mode (true/false)
DEBUG_MODE=false

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment type (development, production, test)
NODE_ENV=development

# Enable development features (true/false)
DEV_MODE=false

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# For local development:
# VALIDATOR_NODES=http://localhost:8547
# DEBUG_MODE=true
# LOG_LEVEL=debug

# For production deployment:
# VALIDATOR_NODES=http://validator1.example.com:8547,http://validator2.example.com:8547
# STORAGE_REPLICATION=true
# BACKUP_ENABLED=true
# LOG_LEVEL=info

# For testing:
# VALIDATOR_NODES=http://localhost:8547,http://localhost:8548
# NETWORK_TIMEOUT=10000
# MAX_RETRIES=5