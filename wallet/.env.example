# TOPAY Wallet Environment Configuration
# Copy this file to .env and update the values as needed

# Blockchain RPC Server URL - for all blockchain communication
NEXT_PUBLIC_BLOCKCHAIN_RPC_URL=http://localhost:3001

# Block Explorer URL - for referencing transactions to users
NEXT_PUBLIC_EXPLORER_URL=http://localhost:3002

# ChainGPT API Configuration - for AI Assistant functionality
# Get your API key from https://chaingpt.org/
NEXT_PUBLIC_CHAINGPT_API_KEY=your_chaingpt_api_key_here
NEXT_PUBLIC_CHAINGPT_API_URL=https://api.chaingpt.org