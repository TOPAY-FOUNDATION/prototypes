{
  "name": "topay-validator-desktop",
  "version": "1.0.0",
  "description": "TOPAY Validator Desktop Application - Blockchain validation node with modern UI",
  "main": "src/main.js",
  "author": {
    "name": "TOPAY Foundation",
    "email": "support@topay.foundation",
    "url": "https://topay.foundation"
  },
  "license": "MIT",
  "keywords": [
    "blockchain",
    "validator",
    "quantum-safe",
    "topay",
    "desktop",
    "electron"
  ],
  "scripts": {
    "start": "electron . --disable-gpu --disable-software-rasterizer",
    "dev": "electron . --dev --disable-gpu --disable-software-rasterizer",
    "service": "node src/validator-service.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "test": "jest",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@topayfoundation/topayz512": "^0.1.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "node-machine-id": "^1.1.12",
    "node-windows": "^1.0.0-beta.8",
    "systeminformation": "^5.21.15",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "sharp": "^0.34.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/topay-foundation/validator-client.git"
  },
  "bugs": {
    "url": "https://github.com/topay-foundation/validator-client/issues"
  },
  "build": {
    "appId": "foundation.topay.validator",
    "productName": "TOPAY Validator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/config",
        "to": "config"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TOPAY Validator",
      "license": "LICENSE.txt",
      "warningsAsErrors": false,
      "displayLanguageSelector": false,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "menuCategory": "TOPAY Foundation",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "guid": "a1b2c3d4-e5f6-7890-abcd-ef1234567890"
    },
    "publish": null
  }
}
